# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ipv6"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "load"
order += "memory"
order += "tztime local"

volume master {
        format = "󰎈 %volume"
        format_muted = "󰎊 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
ipv6{
        format_up = "IPv6 %ip"
        format_down = ""
}
wireless _first_ {
        format_up = "󰖩%quality at %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "E %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
	format_down = "󱉝"
	status_bat = "󰂎"
	status_chr = "󰂄"
	status_unk = "󰂑"
	status_full = "󱟢"
	low_threshold = 15
	threshold_type = "percentage"

}

disk "/" {
        format = " %avail"
}

disk "/home" {
        format = "󰋜 %avail"
}

cpu_usage{
	format = " %usage"
	max_threshold = "95"
	format_above_threshold = " %usage"
	degraded_threshold = "80"
	format_above_degraded_threshold = " %usage"
	
}

load {
	format = ""
	max_threshold = "2"
	format_above_threshold = "Load %1min"
}

memory {
        format = "󰒋 %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%I:%M %p %a %b %d,%Y"
}
